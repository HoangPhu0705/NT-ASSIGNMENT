@model List<SharedViewModels.Category.CategoryDto>

@{
    ViewData["Title"] = "Shop";
}

<div class="">
    @* Top bar *@
    <div class="flex bg-[#F8F8F8] h-24 justify-between px-12">
        <div class="w-full flex flex-col justify-center items-center">
            <div class="flex justify-center items-center gap-2">
                <i class="hgi hgi-stroke hgi-truck text-3xl"></i>
                <p class="text-center font-bold">Free shipping on orders over $29.00.</p>
            </div>
        </div>
        <div class="divider divider-horizontal py-2"></div>

        <div class="w-full flex flex-col justify-center items-center">
            <div class="flex justify-center items-center gap-2">
                <i class="hgi hgi-stroke hgi-checkmark-badge-03 text-3xl"></i>
                <p class="text-center font-bold">Easy returns and 30-day money back guarantee. Learn more</p>
            </div>
        </div>
    </div>
    
    <div class="px-56 py-12">
        <h1 class="text-7xl font-medium">Shop</h1>
    </div>
    

    <div class="w-full px-56">
        <div class="swiper category-swiper">
            <div class="swiper-wrapper">
                
                @if (Model != null && Model.Any())
                {
                    @foreach (var category in Model)
                    {   
                        <a href="/shop/c/@category.Id" class="swiper-slide">
                            <div class="flex flex-col items-center gap-2">
                                <div class="category-link bg-[#EDEEEE]">
                                    <div class="w-full h-full flex justify-center items-center">
                                        <img
                                            src="@category.ImageUrl"
                                            alt="Mice"
                                            class="object-cover w-3/4 h-3/4 transition-transform duration-500 hover:scale-110 hover:cursor-pointer">
                                    </div>
                                </div>
                                <p class="text-sm">@category.Name</p>
                            </div>
                        </a>
                    }
                }
            </div>
        </div>
    </div>
    
