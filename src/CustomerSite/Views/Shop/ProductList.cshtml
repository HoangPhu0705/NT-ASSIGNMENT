@model ShopViewModel
@{
    ViewData["Title"] = "Shop";
}
<div class="px-56 py-10">
    <div class="flex justify-between max-w-full">
        <div class="drawer drawer-start w-auto">
            <input id="my-drawer" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content">
                <!-- Drawer Toggle Button -->
                <label
                    for="my-drawer"
                    class="btn px-10 bg-black text-white hover:bg-black drawer-button rounded-2xl"
                >
                    <i class="hgi hgi-stroke hgi-filter-horizontal"></i>
                    All Filters
                </label>
            </div>
            <div class="drawer-side z-50">
                <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
                <ul class="menu bg-base-200 text-base-content min-h-full w-[30rem] p-4">
                    <li><a>Sidebar Item 1</a></li>
                    <li><a>Sidebar Item 2</a></li>
                </ul>
            </div>
        </div>
        <p class="text-sm text-[#5C5C5C]">Showing: 10 of 44 products</p>
    </div>

    <div class="flex justify-start items-start py-5 gap-3">
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-outline px-10 rounded-2xl border-1 border-[#D7D7D7]">
                Sort
                <i class="hgi hgi-stroke hgi-arrow-down-01"></i>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                <li><a>Item 1</a></li>
                <li><a>Item 2</a></li>
            </ul>
        </div>
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-outline px-10 rounded-2xl border-1 border-[#D7D7D7]">
                Connectivity
                <i class="hgi hgi-stroke hgi-arrow-down-01"></i>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                <li><a>Item 1</a></li>
                <li><a>Item 2</a></li>
            </ul>
        </div>
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-outline px-10 rounded-2xl border-1 border-[#D7D7D7]">
                Series
                <i class="hgi hgi-stroke hgi-arrow-down-01"></i>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                <li><a>Item 1</a></li>
                <li><a>Item 2</a></li>
            </ul>
        </div>
    </div>

    
    <div class="grid grid-cols-4 grid-rows-3 gap-8 mt-5">
        @* BANNER *@
        <div class="relative overflow-hidden col-span-2 row-span-1 bg-gray-200 rounded-2xl h-[27rem] min-w-0">
            <div class="absolute w-full h-full">
                <img src="/img/category_banner.png" alt="" class="object-cover w-full h-full">
                <div class="flex flex-col absolute bottom-24 left-4 px-4 py-2 z-10 w-25">
                    <h1 class="text-white text-6xl font-bold">
                        @Model.Category.Name
                    </h1>
                    <h1 class="text-white text-md font-bold break-words py-4">
                        @Model.Category.Description
                    </h1>
                </div>
            </div>
            <div class="absolute z-10">
            </div>
        </div>

        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="relative col-span-1 row-span-1 bg-[#F2F2F2] rounded-2xl h-[27rem] min-w-0 p-5 flex flex-col">
                    <!-- Heart Icon Link -->
                    <a href="/favorite" class="absolute top-5 right-5 z-10">
                        <i class="hgi hgi-stroke hgi-favourite text-xl font-bold"></i>
                    </a>
                    <!-- Main Card Link -->
                    <a href="/shop/p/@product.Id" class="flex flex-col h-full">
                        <!-- Fixed height image container -->
                        <div class="h-full w-full flex items-center justify-center overflow-hidden">
                            <img src="@product.MainImageUrl" alt="@product.Name" class="w-full h-full object-contain transition-transform duration-200 hover:-translate-y-2">
                        </div>
                        <div class="flex flex-col justify-between flex-grow">
                            <h1 class="mt-4 text-lg font-medium line-clamp-2">@product.Name</h1>
                            <div class="flex justify-between items-center mt-2">
                                <p class="text-sm text-[#5C5C5C]">$@product.Price</p>
                                <!-- Add to Cart Link -->
                                <a href="/cart/add/@product.Id" class="text-sm text-[#5C5C5C] flex items-center">
                                    <span class="mr-2">Add to cart</span>
                                    <i class="hgi hgi-stroke hgi-shopping-cart-01 text-lg"></i>
                                </a>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>