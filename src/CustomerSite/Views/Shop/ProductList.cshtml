@{
    ViewData["Title"] = "Shop";
}
<div class="px-56 py-10">
    <div class="flex justify-between max-w-full">
        <div class="drawer drawer-start w-auto">
            <input id="my-drawer" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content">
                <!-- Drawer Toggle Button -->
                <label
                    for="my-drawer"
                    class="btn px-10 bg-black text-white hover:bg-black drawer-button rounded-2xl"
                >
                    <i class="hgi hgi-stroke hgi-filter-horizontal"></i>
                    All Filters
                </label>
            </div>
            <div class="drawer-side z-50">
                <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
                <ul class="menu bg-base-200 text-base-content min-h-full w-[30rem] p-4">
                    <li><a>Sidebar Item 1</a></li>
                    <li><a>Sidebar Item 2</a></li>
                </ul>
            </div>
        </div>
        <p class="text-sm text-[#5C5C5C]">Showing: 10 of 44 products</p>
    </div>

    <div class="flex justify-start items-start py-5 gap-3">
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-outline px-10 rounded-2xl border-1 border-[#D7D7D7]">
                Sort
                <i class="hgi hgi-stroke hgi-arrow-down-01"></i>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                <li><a>Item 1</a></li>
                <li><a>Item 2</a></li>
            </ul>
        </div>
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-outline px-10 rounded-2xl border-1 border-[#D7D7D7]">
                Connectivity
                <i class="hgi hgi-stroke hgi-arrow-down-01"></i>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                <li><a>Item 1</a></li>
                <li><a>Item 2</a></li>
            </ul>
        </div>
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-outline px-10 rounded-2xl border-1 border-[#D7D7D7]">
                Series
                <i class="hgi hgi-stroke hgi-arrow-down-01"></i>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow">
                <li><a>Item 1</a></li>
                <li><a>Item 2</a></li>
            </ul>
        </div>
    </div>

    <!-- Grid Layout with Width and Height -->
    <div class="grid grid-cols-4 grid-rows-3 gap-8 mt-5">
        <!-- Top Row -->
        <div class="col-span-2 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Banner (Mice) -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 1 -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 2 -->

        <!-- Middle Row -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 3 -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 4 -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 5 -->
        <div class="col-span-1 row-span-2 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Banner (Shipping/Payment) -->

        <!-- Bottom Row -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 6 -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 7 -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 8 -->
        <!-- The last column is occupied by the banner from the middle row -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 6 -->
        <div class="col-span-1 row-span-1 bg-gray-200 rounded-lg h-96 min-w-0"></div> <!-- Card 7 -->
    </div>
</div>