@{
    ViewData["Title"] = "Login";
}

<div class="bg-[#F4F4F4] flex flex-col justify-center items-center w-screen min-h-screen px-4 sm:px-6 md:px-8 lg:px-16 xl:px-32">
    <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold mb-3 flex items-center gap-1">
        NE
        <span class="inline-flex items-center mt-1 sm:mt-2">
        </span>
        TECH
    </h1>
    <p class="text-lg sm:text-xl md:text-2xl font-light mb-3 text-center">
        Login with your NEX ID.
    </p>
    <form class="space-y-4 w-full max-w-md sm:max-w-md md:max-w-2xl lg:max-w-3xl">
        
        <div class="text-right">
            <a
                href="#"
                class="text-black text-sm sm:text-md font-bold hover:text-gray-500 underline"
            >
                Forgot password?
            </a>
        </div>
        <Button
            type="submit"
            class="w-full bg-[#2F3132] rounded-none text-primary-foreground border-3 hover:bg-transparent hover:text-black hover:cursor-pointer py-6 sm:py-7"
        >
            <span class="font-bold text-lg sm:text-xl md:text-xl">LOGIN</span>
        </Button>
    </form>
    <div class="flex flex-col sm:flex-row items-center gap-2 mt-4 text-center">
        <p class="text-md sm:text-lg">Don't have an account?</p>
        <a
            href="/auth/create-account"
            class="text-[#2F3132] text-md sm:text-lg hover:text-gray-500 font-bold hover:underline mb-0.5 underline"
        >
            Create Account
        </a>
    </div>
</div>
