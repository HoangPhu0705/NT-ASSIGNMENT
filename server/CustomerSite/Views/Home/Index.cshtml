@{
    ViewData["Title"] = "Home Page";
}

<div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="relative w-full max-w-2xl mx-auto bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 rounded-xl shadow-2xl p-8 sm:p-12 lg:p-16 transition-all duration-300 hover:shadow-[0_0_25px_rgba(0,0,0,0.3)] hover:-translate-y-1">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-white text-center tracking-tight mb-6 animate-pulse">
            Welcome to My MVC Project
        </h1>
        <p class="text-lg sm:text-xl lg:text-2xl text-gray-100 text-center opacity-90 mb-8 leading-relaxed">
            This is a test of complex Tailwind CSS styles to ensure proper integration.
        </p>
        <div class="flex justify-center space-x-4">
            <button class="bg-white text-indigo-600 font-semibold py-3 px-6 rounded-lg shadow-md hover:bg-indigo-600 hover:text-white hover:scale-105 transition-transform duration-200 ease-in-out">
                Primary Action
            </button>
            <button class="bg-transparent border-2 border-white text-white font-semibold py-3 px-6 rounded-lg hover:bg-white hover:text-indigo-600 hover:border-transparent transition-colors duration-200">
                Secondary Action
            </button>
        </div>
        <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="bg-white/20 backdrop-blur-md rounded-lg p-6 hover:bg-white/30 transition-colors duration-300">
                <p class="text-white font-medium">Card 1: Responsive and interactive</p>
            </div>
            <div class="bg-white/20 backdrop-blur-md rounded-lg p-6 hover:bg-white/30 transition-colors duration-300">
                <p class="text-white font-medium">Card 2: Testing grid layout</p>
            </div>
        </div>
    </div>
</div>