@* Script to toggle shop-menu visibility *@
<script>
    const shopLink = document.getElementById('shop-link');
    const shopMenu = document.getElementById('shop-menu');

    // Show the shop-menu when hovering over shop-link
    function showShopMenu() {
        shopMenu.classList.remove('hidden');
    }

    // Hide the shop-menu when leaving shop-menu, but not when moving to shop-link
    function hideShopMenu(event) {
        const related = event.relatedTarget;
        // Only hide if the mouse is not moving to shopLink or staying within shopMenu
        if (!shopLink.contains(related) && !shopMenu.contains(related)) {
            shopMenu.classList.add('hidden');
        }
    }

    // Show menu when hovering over shop-link
    shopLink.addEventListener('mouseenter', showShopMenu);
    // Keep menu visible when mouse enters shop-menu
    shopMenu.addEventListener('mouseenter', () => {
        shopMenu.classList.remove('hidden');
    });
    // Hide menu when mouse leaves shop-menu
    shopMenu.addEventListener('mouseleave', hideShopMenu);
    // Do not hide menu when leaving shop-link if moving to shop-menu
    shopLink.addEventListener('mouseleave', (event) => {
        const related = event.relatedTarget;
        if (!shopMenu.contains(related)) {
            shopMenu.classList.add('hidden');
        }
    });
</script>
